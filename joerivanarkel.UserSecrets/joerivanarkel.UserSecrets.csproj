<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

        <PackageId>joerivanarkel.UserSecrets</PackageId>
        <Version>1.0.4</Version>
        <Authors>Joeri van Arkel</Authors>
        <Company>vanarkel</Company>
        <RepositoryUrl>https://github.com/joerivanarkel/joerivanarkel/tree/main/joerivanarkel.UserSecrets</RepositoryUrl>
        <PackageProjectUrl>https://github.com/joerivanarkel/joerivanarkel.Packages</PackageProjectUrl>
        <PackageIcon>icon.png</PackageIcon>

    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="6.0.1" />
        <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="6.0.1" />
        <None Include=".\icon.png" Pack="true" PackagePath="\" />
        <None Include=".\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>